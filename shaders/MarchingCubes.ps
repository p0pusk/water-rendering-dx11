#include "shaders/Light.h"

struct VSOutput
{
    float4 pos : SV_Position;
    float3 worldPos : POSITION;
    float4 color : COLOR;
    float3 norm : NORMAL;
};

float4 ps(VSOutput pixel) : SV_Target0
{
    return float4(ColorWater(pixel.color.xyz, normalize(pixel.norm),
                             pixel.worldPos.xyz, 100.0), pixel.color.w);
}
